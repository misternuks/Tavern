      <small class="profile-user-handle"><%= @user.first_name %> <%= @user.last_name %></small>
      <div class="profile-actions">
        <h2 class="profile-username">Favorite Games</h2>
      </div>
      <div class="profile-actions">
        <a href="#" class="profile-button profile-button--icon">
          <%= image_tag 'WFRP-Core-logo.png'%>
