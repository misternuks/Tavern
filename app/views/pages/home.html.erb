</div>
<!--gm cards grid-->
<div class="profile-section">
  <h1 style="margin-top: 24px; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);">GAME MASTERS</h1>
  <div class="profile-container">
    <% DmProfile.first(4).each do |profile| %>
      <article class="profile-card">
        <div class="profile-image" style="width: 175px; height:175px;">
          <%= image_tag "http://source.unsplash.com/featured/cardgame&#{rand(1000)}"%>
        </div>
        <h2 class="profile-username"><%= profile.user.user_name %></h2>
        <small class="profile-user-handle"><%= profile.user.first_name %> <%= profile.user.last_name %></small>
        <div class="profile-actions">
          <button class="profile-button profile-button--primary">Reserve</button>
          <button class="profile-button profile-button--secondary">
            $<%= profile.price %>/h
          </button>
        </div>
        <div class="profile-actions">
          <a href="#" class="profile-button profile-button--icon">
            <%= image_tag 'Vampire_The_Masquerade.png'%>
          </a>
          <a href="#" class="profile-button profile-button--icon">
            <%= image_tag 'call-of-cthulhu-logo-1_1200x1200.webp'%>
          </a>
          <a href="#" class="profile-button profile-button--icon">
            <%= image_tag 'pathfinder.png'%>
          </a>
        </div>
      </article>
    <% end %>
  </div>
  <div class="footer">
    <div class="footer-links">
      <a href="#"><i class="fab fa-github"></i></a>
      <a href="#"><i class="fab fa-instagram"></i></a>
      <a href="#"><i class="fab fa-facebook"></i></a>
      <a href="#"><i class="fab fa-twitter"></i></a>
      <a href="#"><i class="fab fa-linkedin"></i></a>
    </div>
    <div class="footer-copyright">
      We <i class="fas fa-heart"></i> Tabletop Gaming
    </div>
  </div>
</div>
