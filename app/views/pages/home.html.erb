    <a href="https://www.mythrillfiction.com/force-mage" alt="Mythrill" target="_blank">
      <div class="test-card">
        <div class="wrapper">
          <%= image_tag 'https://cdn1.vox-cdn.com/uploads/chorus_asset/file/6862881/Screenshot%202016-07-29%2012.04.07.png',class:"cover-image" %>
        </div>
      </div>
