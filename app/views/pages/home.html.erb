    <a href="https://www.mythrillfiction.com/force-mage" alt="Mythrill" target="_blank">
      <div class="test-card">
        <div class="wrapper">
          <%= image_tag 'call-of-cthulhu-wallpaper.jpg',class:"cover-image" %>
        </div>
      </div>
    </a>
    <a href="https://www.mythrillfiction.com/force-mage" alt="Mythrill" target="_blank">
      <div class="test-card">
        <div class="wrapper">
          <%= image_tag 'https://prodimage.images-bn.com/pimages/9780786965601_p0_v2_s1200x630.jpg',class:"cover-image" %>
        </div>
      </div>
    </a>
    <a href="https://www.mythrillfiction.com/force-mage" alt="Mythrill" target="_blank">
      <div class="test-card">
        <div class="wrapper">
          <%= image_tag 'https://d1vzi28wh99zvq.cloudfront.net/images/54/286466.jpg',class:"cover-image" %>
        </div>
      </div>
